<h1><%= @title %></h1>

<%= form_tag(search_results_path, :method => :post, :class => "default") do %>

<div>
	<%= label_tag "Name" %>
	<%= text_field_tag :name %>
</div>

<div>
	<%= label_tag "Spieleranzahl" %>
	<%= select_tag :number_of_players, options_for_select(Game::NUMBER_OF_PLAYERS.collect{ |k, v| [v, k ] }) %>
</div>

<div>
	<%= submit_tag "Suchen" %>
</div>

<% end %>


<p>
	<%= link_to "Home", "/" %>
</p>