<h1>Listing users</h1>

<table class="default">
  <tr>
    <th>Name</th>
    <th>Admin?</th>
    <th>&nbsp;</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.is_admin %></td>
    <td><%= link_to 'Show', user %><br />
			<%= link_to 'Edit', edit_user_path(user) %><br />
    	<%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
