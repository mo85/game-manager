<div>
	<%= f.label "Name" %>
	<%= f.text_field :name %>
</div>

<div>
	<%= f.label "Beschreibung" %>
	<%= f.text_area :description %>
</div>

<div>
	<%= f.label "Spieleranzahl" %>
